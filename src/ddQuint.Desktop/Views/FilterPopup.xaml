<UserControl x:Class="ddQuint.Desktop.Views.FilterPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Border Background="{StaticResource WindowBackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="6"
            MinWidth="280">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              Direction="270" 
                              ShadowDepth="2" 
                              BlurRadius="8" 
                              Opacity="0.3"/>
        </Border.Effect>
        
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Filter options -->
            <CheckBox Grid.Row="0" x:Name="HideBufferZoneCheckBox"
                      Content="Hide Buffer Zone Samples"
                      IsChecked="{Binding HideBufferZone}"
                      Style="{StaticResource DarkCheckBox}"
                      Margin="0,0,0,10"/>
            
            <CheckBox Grid.Row="1" x:Name="HideWarningsCheckBox"
                      Content="Hide Warning Samples"
                      IsChecked="{Binding HideWarnings}"
                      Style="{StaticResource DarkCheckBox}"
                      Margin="0,0,0,0"/>
        </Grid>
    </Border>
</UserControl>