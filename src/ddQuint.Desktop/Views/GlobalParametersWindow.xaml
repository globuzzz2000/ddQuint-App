<Window x:Class="ddQuint.Desktop.Views.GlobalParametersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xml:lang="en-US"
        Title="Global Parameters" 
        Height="600" Width="800"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource WindowBackgroundBrush}"
        Loaded="Window_Loaded">
    
    <Grid Background="{StaticResource SidebarBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Parameters TabControl -->
        <Border Grid.Row="0" Background="{StaticResource WindowBackgroundBrush}"
                CornerRadius="12" Margin="20,30,20,6"
                BorderThickness="1"
                BorderBrush="#B0B0B0">
        <TabControl x:Name="ParametersTabControl" 
                   Background="Transparent"
                   BorderThickness="0"
                   Margin="0,-15,0,0">
            <TabControl.Resources>
                <Style TargetType="TabPanel">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="{StaticResource SidebarBackgroundBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                    <Setter Property="Padding" Value="12,0"/>
                    <Setter Property="Height" Value="20"/>
                    <Setter Property="MinHeight" Value="20"/>
                    <Setter Property="FontSize" Value="11"/>
                    <Setter Property="MinWidth" Value="120"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="TabBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="1,1,1,1"
                                        CornerRadius="6,6,6,6"
                                        Padding="{TemplateBinding Padding}"
                                        Height="{TemplateBinding Height}"
                                        MinWidth="{TemplateBinding MinWidth}">
                                    <ContentPresenter Content="{TemplateBinding Header}"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}"/>
                                        <Setter TargetName="TabBorder" Property="BorderThickness" Value="1,1,1,0"/>
                                        <Setter TargetName="TabBorder" Property="CornerRadius" Value="6,6,0,0"/>
                                        <Setter Property="Panel.ZIndex" Value="100"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            
            <!-- HDBSCAN Settings Tab -->
            <TabItem Header="HDBSCAN Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Resources>
                        <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
                            <Setter Property="Width" Value="8"/>
                            <Setter Property="Background" Value="#2B2B2B"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                                            <Track Name="PART_Track" IsDirectionReversed="true">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                                <Border Background="#555555" CornerRadius="4" Margin="1"/>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    <StackPanel x:Name="HDBSCANPanel" Margin="20">
                        <!-- HDBSCAN parameters will be added here -->
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Expected Centroids Tab -->
            <TabItem Header="Expected Centroids">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Resources>
                        <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
                            <Setter Property="Width" Value="8"/>
                            <Setter Property="Background" Value="#2B2B2B"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                                            <Track Name="PART_Track" IsDirectionReversed="true">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                                <Border Background="#555555" CornerRadius="4" Margin="1"/>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    <StackPanel x:Name="CentroidsPanel" Margin="20">
                        <!-- Centroids parameters will be added here -->
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Copy Number Tab -->
            <TabItem Header="Copy Number">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Resources>
                        <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
                            <Setter Property="Width" Value="8"/>
                            <Setter Property="Background" Value="#2B2B2B"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                                            <Track Name="PART_Track" IsDirectionReversed="true">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                                <Border Background="#555555" CornerRadius="4" Margin="1"/>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    <StackPanel x:Name="CopyNumberPanel" Margin="20">
                        <!-- Copy number parameters will be added here -->
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Visualization Tab -->
            <TabItem Header="Visualization">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Resources>
                        <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
                            <Setter Property="Width" Value="8"/>
                            <Setter Property="Background" Value="#2B2B2B"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                                            <Track Name="PART_Track" IsDirectionReversed="true">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                                <Border Background="#555555" CornerRadius="4" Margin="1"/>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    <StackPanel x:Name="VisualizationPanel" Margin="20">
                        <!-- Visualization parameters will be added here -->
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- General Tab -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Resources>
                        <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
                            <Setter Property="Width" Value="8"/>
                            <Setter Property="Background" Value="#2B2B2B"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                                            <Track Name="PART_Track" IsDirectionReversed="true">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                                <Border Background="#555555" CornerRadius="4" Margin="1"/>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    <StackPanel x:Name="GeneralPanel" Margin="20">
                        <!-- General parameters will be added here -->
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        </Border>
        
        <!-- Bottom buttons -->
        <Border Grid.Row="1" Background="{StaticResource SidebarBackgroundBrush}" 
                BorderThickness="0" Height="40">
            <Grid Margin="20,0" VerticalAlignment="Center">
                <!-- Left side - Restore Defaults -->
                <Button Content="Restore Defaults" 
                       Style="{StaticResource MacOSButton}" 
                       Width="120" 
                       HorizontalAlignment="Left"
                       Click="RestoreDefaultsButton_Click"/>
                <!-- Right side - Cancel and Apply -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <Button Content="Cancel" 
                           Style="{StaticResource MacOSButton}" 
                           Width="80" 
                           Margin="0,0,10,0"
                           Click="CancelButton_Click"/>
                    <Button Content="Save &amp; Apply" 
                           Style="{StaticResource MacOSButton}" 
                           Background="{StaticResource SelectionBrush}"
                           Width="120"
                           Click="ApplyButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
