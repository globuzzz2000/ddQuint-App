<Window x:Class="ddQuint.Desktop.Views.OverviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overview" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource WindowBackgroundBrush}">
    <Grid Background="{StaticResource SidebarBackgroundBrush}">
        <Border Background="{StaticResource WindowBackgroundBrush}" CornerRadius="12" Margin="16" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          CanContentScroll="False" 
                          PanningMode="VerticalOnly"
                          PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                <ItemsControl x:Name="Items" >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="8" Padding="6" Background="{StaticResource SidebarBackgroundBrush}" CornerRadius="6">
                                <StackPanel Width="260">
                                    <TextBlock Text="{Binding WellId}" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock Text="{Binding SampleName}" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <Image Source="{Binding PlotImagePath}" Margin="0,6,0,0" Stretch="Uniform" Height="180"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>

